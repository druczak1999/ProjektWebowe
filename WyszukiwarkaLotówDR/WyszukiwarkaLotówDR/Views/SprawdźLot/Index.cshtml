@model IEnumerable<WyszukiwarkaLotówDR.Baza_danych.Sprzedaz>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="align-content-center text-center justify-content-center">
    <form asp-action="Details" method="get">
        <div class="form-actions no-color">
            <p>
                Login <input type="text" name="login" value="@ViewData["Login"]" />
                Numer lotu: <input type="text" name="idLotu" value="@ViewData["IdLotu"]" />
                <input type="submit" value="Szukaj" class="btn btn-default" />
                <a asp-action="Index">Pokaż pełną listę lotów</a>
            </p>
        </div>
    </form>
</div>