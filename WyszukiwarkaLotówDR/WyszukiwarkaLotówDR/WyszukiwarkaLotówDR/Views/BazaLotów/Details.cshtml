@model WyszukiwarkaLotówDR.Loty.Lot

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Lot</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            Data i czas wylotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.czasWylotu)
        </dd>
        <dt class = "col-sm-2">
            Data i czas przylotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.czasPrzylotu)
        </dd>
        <dt class = "col-sm-2">
           Miejsce wylotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.miejsceWylotu)
        </dd>
        <dt class = "col-sm-2">
            Miejsce przylotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.miejscePrzylotu)
        </dd>
        <dt class = "col-sm-2">
            Lotnisko początkowe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kodLotniskaWylotu)
        </dd>
        <dt class = "col-sm-2">
            Lotnisko końcowe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kodLotniskaPrzylotu)
        </dd>
        <dt class = "col-sm-2">
           Cena 1 biletu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cenaBiletu) zł
        </dd>
        <dt class = "col-sm-2">
            Ilość wolnych miejsc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.iloscMiejsc)
        </dd>
    </dl>
</div>
<div>
    
    <a asp-action="Index">Powrót do listy lotów</a>
</div>
